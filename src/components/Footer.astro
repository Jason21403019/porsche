<footer class="footer">
  <div class="footer-container">
    <h1>Keep abreast<br />of the latest brand news</h1>
    <p>Office@email.com</p>
    <div class="footer-icon">
      <img src="/public/img/ig.svg" alt="ig" />
      <img src="/public/img/fb.svg" alt="fb" />
      <img src="/public/img/yt.svg" alt="yt" />
      <img src="/public/img/lk.svg" alt="lk" />
    </div>
  </div>
  <img class="footerimg" src="/public/img/footerimg.png" alt="footerimg" />
</footer>

<style lang="scss">
  .footer {
    position: relative;
    background: linear-gradient(to right, #000000, #676767, #ffce60);
    &-container {
      display: grid;
      grid-template-columns:
        [start] 300px
        [content-start] minmax(0, 1fr)
        [end];
      padding: clamp(2rem, 5vw, 150px) clamp(1rem, 3vw, 3rem);

      h1,
      p,
      .footer-icon {
        grid-column: content-start / end;
      }
      h1 {
        font-size: 64px;
        color: white;
        margin-bottom: 64px;
      }
      P {
        font-size: 32px;
        color: white;
        &::after {
          content: '';
          display: block;
          width: 100%;
          height: 2px;
          background: white;
          margin: 20px 0;
          margin-bottom: 64px;
        }
      }
      .footer-icon {
        display: flex;
        cursor: pointer;
        img {
          width: 50px;
          height: 50px;
          margin-right: 20px;
        }
      }
    }
    .footerimg {
      position: absolute;
      top: 25%;
      right: 0;
      width: auto;
      height: 70%;
      object-fit: contain;
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
