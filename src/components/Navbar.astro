<header class="header">
  <nav class="nav">
    <div class="nav__logo">
      <img class="nav__logo-img" src="./public/img/logo.png" alt="logo" />
    </div>
    <div class="nav__menu">
      <ul class="nav__menu-list">
        <li class="nav__menu-item"><a href="">The Soul Becomes Electric</a></li>
        <li class="nav__menu-item"><a href="">Model Selection</a></li>
        <li class="nav__menu-item"><a href="">Green Eengry Track</a></li>
        <li class="nav__menu-item"><a href="">Social Media Stories</a></li>
        <li class="nav__menu-item"><a href="">Charging Station Map</a></li>
        <li class="nav__menu-item"><a href="">Keep Abreast US</a></li>
      </ul>
    </div>
    <div class="nav__hams">
      <span class="nav__ham"></span>
      <span class="nav__ham"></span>
    </div>
  </nav>
</header>
<script>
  const navHams = document.querySelector(".nav__hams");
  const navMenu = document.querySelector(".nav__menu");
  const navHam = document.querySelectorAll(".nav__ham");
  const menuItems = document.querySelectorAll(".nav__menu-item");

  const toggleMenu = (show = false) => {
    if (show) {
      navMenu?.classList.add("active");
      navHam.forEach((ham) => ham.classList.add("active"));
      menuItems.forEach((item, index) => {
        setTimeout(() => {
          item.classList.add("active");
        }, index * 150);
      });
    } else {
      navMenu?.classList.remove("active");
      navHam.forEach((ham) => ham.classList.remove("active"));
      menuItems.forEach((item) => item.classList.remove("active"));
    }
  };

  navHams?.addEventListener("click", (e) => {
    e.stopPropagation();
    const isActive = navMenu?.classList.contains("active");
    toggleMenu(!isActive);
  });

  navMenu?.addEventListener("click", (e) => {
    e.stopPropagation();
  });

  document.addEventListener("click", () => {
    if (navMenu?.classList.contains("active")) {
      toggleMenu(false);
    }
  });

  let lastScrollPosition = window.scrollY;
  let ticking = false;

  window.addEventListener("scroll", () => {
    lastScrollPosition = window.scrollY;
    if (!ticking) {
      window.requestAnimationFrame(() => {
        if (navMenu?.classList.contains("active")) {
          toggleMenu(false);
        }
        ticking = false;
      });
      ticking = true;
    }
  });
</script>

