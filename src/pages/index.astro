---
import Layout from '../layouts/Layout.astro'
import Bendo from '../components/Bendo.astro'
import Banner from '../components/Banner.astro'
import Info from '../components/Info.astro'
import Carselect from '../components/Carselect.astro'
import Carouselcar from '../components/Carouselcar.astro'
import HorizontalScroll from '../components/HorizontalScroll.astro'
const sections = [
  {
    id: 'model-911',
    years: ['-2019s', '-2024s', '-2025s', '-Future'],
    activeYear: '-2019s',
    gradient: {
      from: '#a88b49',
      to: '#f8cc69',
    },
    title: 'Taycan series',
    description: [
      '<p>-800V electrical architecture.</p>',
      '<p>-Supports fast charging up to 270 kW.</p>',
    ],
    imageSrc: '/porsche-911.jpg',
  },
  {
    id: 'model-taycan',
    years: ['-2019s', '-2024s', '-2025s', '-Future'],
    activeYear: '-2024s',
    gradient: {
      from: '#f8cc69',
      to: '#d5bd85',
    },
    title: '保時捷 Taycan',
    description: '電動未來，永續創新',
    imageSrc: '/porsche-taycan.jpg',
  },
  {
    id: 'model-cayenne',
    years: ['-2019s', '-2024s', '-2025s', '-Future'],
    activeYear: '-2025s',
    gradient: {
      from: '#d5bd85',
      to: '#aeaba6',
    },
    title: '保時捷 Cayenne',
    description: '豪華SUV的運動基因',
    imageSrc: '/porsche-cayenne.jpg',
  },
  {
    id: 'model-macan',
    years: ['-2019s', '-2024s', '-2025s', '-Future'],
    activeYear: '-Future',
    gradient: {
      from: '#aeaba6',
      to: '#313131',
    },
    title: '保時捷 Macan',
    description: '靈活動感的都會精靈',
    imageSrc: '/porsche-macan.jpg',
  },
]
---

<Layout>
  <Banner src="/public/porsche3.json" className="w-64 h-64" />
  <Info />
  <Carselect />
  <Carouselcar />
  <HorizontalScroll
    sections={sections.map((section) => ({
      ...section,
      image: section.imageSrc,
    }))}
  />
  <Bendo />
</Layout>
