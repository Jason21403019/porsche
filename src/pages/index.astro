---
import Layout from '../layouts/Layout.astro'
import Bendo from '../components/Bendo.astro'
import Banner from '../components/Banner.astro'
import Info from '../components/Info.astro'
import Carselect from '../components/Carselect.astro'
import HorizontalScroll from '../components/HorizontalScroll.astro'
const sections = [
  {
    id: 'model-911',
    years: ['-2019s', '-2024s', '-2025s', '-Future'],
    activeYear: '-2019s',
    gradient: {
      from: '#a88b49',
      to: '#f8cc69',
    },
    title: ['2019s', 'Taycan series'],
    description: [
      '-800V electrical architecture.',
      '-Supports fast charging up to 270 kW.',
    ],
    imageSrc: '/public/img/taycan4.png',
  },
  {
    id: 'model-taycan',
    years: ['-2019s', '-2024s', '-2025s', '-Future'],
    activeYear: '-2024s',
    gradient: {
      from: '#f8cc69',
      to: '#d5bd85',
    },
    title: ['2024s', 'Macan Electric version'],
    description: [
      '- Based on the PPE platform,',
      'improve battery managementand battery life.',
    ],
    imageSrc: '/public/img/2024scar.png',
  },
  {
    id: 'model-cayenne',
    years: ['-2019s', '-2024s', '-2025s', '-Future'],
    activeYear: '-2025s',
    gradient: {
      from: '#d5bd85',
      to: '#aeaba6',
    },
    title: ['2025s', '718 Series Electrification'],
    description: [
      '- Adopt a new lightweight battery design to optimize control performance.',
    ],
    imageSrc: '/public/img/2025scar.png',
  },
  {
    id: 'model-macan',
    years: ['-2019s', '-2024s', '-2025s', '-Future'],
    activeYear: '-Future',
    gradient: {
      from: '#aeaba6',
      to: '#313131',
    },
    title: [
      'Cayenne electric version, other models',
      'Planned to launch in the next few years',
    ],
    description: [
      '- Using solid-state battery technology may further improve charging efficiency and energy density.',
    ],
    imageSrc: '/public/img/futurecar.png',
  },
]
---

<Layout>
  <Banner src="/public/porsche3.json" className="w-64 h-64" />
  <Info />
  <Carselect />
  <HorizontalScroll
    sections={sections.map((section) => ({
      ...section,
      image: section.imageSrc,
    }))}
  />
  <Bendo />
</Layout>
